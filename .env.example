# =============================================================================
# Ebook Library - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=ebookuser
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
POSTGRES_DB=ebooklibrary

# -----------------------------------------------------------------------------
# Security Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Generate a strong secret key for JWT token signing
# Example: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_SECRET

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
# URL where your frontend is hosted (for CORS)
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Storage Paths (Optional - defaults shown)
# -----------------------------------------------------------------------------
# BOOK_STORAGE_PATH=/data/books
# COVER_STORAGE_PATH=/data/covers
